---
import MainLayout from "../layouts/MainLayout.astro";
import { Image } from "astro:assets";
import logo from "../images/logo.svg";
---

<MainLayout title="Débouchage Solutions | Urgence 24/7">
  <div class="bg-white min-h-screen">
    <main class="mx-auto w-full max-w-7xl px-6 pb-16 pt-10 sm:pb-24 lg:px-8">
      <div class="mx-auto mt-14 max-w-2xl text-center sm:mt-24">
        <h1
          class="mt-4 text-3xl font-bold tracking-tight text-gray-900 sm:text-5xl"
        >
          Merci!
        </h1>
        <p
          class="mt-4 text-lg leading-7 text-gray-600 sm:mt-6 sm:text-lg sm:leading-8"
        >
          Votre soumission a bien été recu. Nous vous contacterons bientôt.
        </p>
      </div>
      <div class="mx-auto mt-16 flow-root max-w-lg sm:mt-20">
        <h2 class="sr-only">Popular pages</h2>
        <div class="flex justify-center">
          <a href="/" class="text-lg font-semibold leading-6 text-blue-600">
            <span aria-hidden="true">&larr;</span>
            Retour à la page d'accueil
          </a>
        </div>
      </div>
    </main>
  </div>
  <!-- Event snippet for Quote Lead Form Submission conversion page -->
  <script is:inline>
    gtag("event", "conversion", {
      send_to: "AW-11118371082/MhM1CKPgiN0aEIrC07Up",
      value: 1.0,
      currency: "CAD",
    });
  </script>
</MainLayout>
