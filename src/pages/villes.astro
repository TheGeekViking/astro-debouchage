---
import MainLayout from "../layouts/MainLayout.astro";
import { cityDetails } from "../data/cityDetails";
import { Image } from "astro:assets";
---

<MainLayout
  title="Débouchage Solutions | Villes desservies | Urgence 24/7"
  metaTitle="Débouchage Solutions | Villes desservies | Urgence 24/7"
  metaDescription="Découvrez toutes les villes desservies par Débouchage Solutions. Service d'urgence 24/7 dans la région de Montréal et ses environs."
  canonical="https://debouchagesolutions.ca/villes/"
>
  <head slot="head">
    <meta
      property="og:title"
      content="Débouchage Solutions | Villes desservies | Urgence 24/7"
    />
    <meta
      property="og:description"
      content="Découvrez toutes les villes desservies par Débouchage Solutions. Service d'urgence 24/7 dans la région de Montréal et ses environs."
    />
    <meta
      property="og:image"
      content="https://debouchagesolutions.ca/images/montreal.webp"
    />
    <meta property="og:url" content="https://debouchagesolutions.ca/villes/" />
    <meta property="og:type" content="website" />
    <meta property="og:locale" content="fr_CA" />
  </head>
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <div class="mx-auto max-w-2xl">
      <h1
        class="mt-20 mb-14 text-pretty text-4xl font-semibold tracking-tight text-blue-900 sm:text-balance sm:text-5xl text-center"
      >
        Villes Desservis
      </h1>
    </div>
  </div>
  <div class="relative">
    <div class="absolute inset-0 flex items-center" aria-hidden="true">
      <div class="w-full border-t border-gray-300"></div>
    </div>
    <div class="relative flex justify-center"></div>
  </div>
  <ul
    role="list"
    class="grid grid-cols-2 gap-x-4 gap-y-8 sm:gap-x-6 lg:grid-cols-4 xl:gap-x-8 my-14 mx-10"
  >
    {
      Object.entries(cityDetails).map(([key, city]) => (
        <li class="relative">
          <div class="group overflow-hidden rounded-lg bg-blue-950 focus-within:ring-2 focus-within:ring-blue-500 focus-within:ring-offset-2 focus-within:ring-offset-blue-100">
            <Image
              src={city.cardImgUrl}
              alt={city.cardTitle}
              class="pointer-events-none aspect-[10/7] object-cover opacity-40 group-hover:opacity-75"
              format="webp"
              width={600}
              height={400}
              format="webp"
              loading="lazy"
            />

            <a href={`/${key}/`}>
              <button type="button" class="absolute inset-0 focus:outline-none">
                <h2 class="text-blue-100 lg:text-4xl sm:text-4xl">
                  {city.cardTitle}
                </h2>
              </button>
            </a>
          </div>
        </li>
      ))
    }
  </ul>
  <!-- More files... -->
</MainLayout>
